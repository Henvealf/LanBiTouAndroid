<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <!--添加账户的标题栏-->
    <!--这个是使用之前MainActivity的主题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="?attr/colorPrimary"
        >
        <!--返回账单主页面按钮-->
        <ImageButton
            android:id="@+id/add_bill_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back"
            android:layout_gravity="center_horizontal"/>
        <!--标题-->
        <TextView
            android:id="@+id/add_bill_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/addNewBill"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="15dp"/>


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addNewBill"/>

    <RadioGroup
        android:id="@+id/add_bill_type_rg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/add_bill_rb_in"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="收入"
            android:background="@color/red"/>
        <RadioButton
            android:id="@+id/add_bill_rb_out"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@color/blue"
            android:text="支出"
            android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>